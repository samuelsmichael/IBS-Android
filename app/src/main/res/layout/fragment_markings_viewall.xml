<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

	<com.inductivebiblestudyapp.ui.widget.ClearableEditText
		    android:id="@+id/ibs_custom_markings_viewall_search"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:ems="10"
		    style="@style/SearchViewDefault" 
		    
		    />

    
	 <include layout="@layout/viewstub_markings_viewall_create_sort"
       		android:layout_width="match_parent"
  			android:layout_height="wrap_content"	             
       />
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/ibs_custom_markings_viewall_recyclerview"
        android:layout_width="match_parent"
       	android:layout_height="0dp"
    	android:layout_weight="1.0"
    	android:scrollbars="vertical"
        />
    
    
</LinearLayout>
