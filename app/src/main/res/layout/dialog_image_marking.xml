<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    
	    android:orientation="vertical"
	    android:gravity="center"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:paddingBottom="5dp"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin">
    
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    
	    android:orientation="vertical"
	    
	    >
	    
	    <TextView
		    android:id="@+id/ibs_dialog_imageMarking_text_title"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          
	          android:layout_alignParentLeft="true"
	          android:layout_toLeftOf="@+id/ibs_dialog_imageMarking_button_share"
	          
	          android:layout_alignBottom="@+id/ibs_dialog_imageMarking_button_share"
	          android:gravity="center_vertical"
	          android:text=""
	          
	          android:textAppearance="?android:attr/textAppearanceLarge"
	           />
	    
	    <ImageButton
			    android:id="@+id/ibs_dialog_imageMarking_button_share"
			    android:layout_width="@dimen/small_touch_size"
			    android:layout_height="@dimen/small_touch_size"
			    
			    android:layout_toLeftOf="@+id/ibs_dialog_imageMarking_button_delete"
			    android:layout_alignBottom="@+id/ibs_dialog_imageMarking_button_delete"
			    android:layout_marginLeft="@dimen/min_item_margin"
			    android:src="@drawable/ic_share" 
			    style="@style/ImageButtonStyle.NoBackground"
			    
			    android:contentDescription="@string/ibs_contentDescription_share"			    		    
	   
	   			/>
	    
	    <ImageButton
		    android:id="@+id/ibs_dialog_imageMarking_button_delete"
		    android:layout_width="@dimen/small_touch_size"
		    android:layout_height="@dimen/small_touch_size"
		    
		    android:layout_marginLeft="@dimen/min_item_margin"
		    android:scaleType="centerInside"
		    android:src="@drawable/ic_delete" 
		    style="@style/ImageButtonStyle.NoBackground"
		    android:contentDescription="@string/ibs_contentDescription_delete"
		    
		    android:visibility="visible"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"    
    		
   			 />
	    	
	    <ImageView
	        android:id="@+id/ibs_dialog_imageMarking_img_preview"
	        android:layout_width="@dimen/ibs_dialog_save_minWidth"
	        android:layout_height="@dimen/ibs_max_display_height"
        	android:maxHeight="@dimen/ibs_max_display_height"
        	android:maxWidth="@dimen/ibs_max_display_width"
        
	        android:src="@null" 
	        android:scaleType="fitCenter"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/ibs_dialog_imageMarking_text_title"
	        
	        
	        android:layout_marginTop="@dimen/activity_vertical_margin"
	        />
	    
	    
	    
		<TextView
		    android:id="@+id/ibs_dialog_imageMarking_text_body"
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:layout_below="@+id/ibs_dialog_imageMarking_img_preview"
	          android:text=""
	          
	          style="@style/BibleVerseText"
	          android:paddingTop="@dimen/activity_vertical_margin"
	          android:paddingBottom="@dimen/activity_vertical_margin" />
	
	</RelativeLayout>
</ScrollView>