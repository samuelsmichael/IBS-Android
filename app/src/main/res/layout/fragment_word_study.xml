<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inductivebiblestudyapp.ui.fragments.profile.bible.wordstudy.WordStudyFragment" >

    <ProgressBar
        android:id="@+id/ibs_progress_bar_loading"
        style="TextLoadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />
    
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/ibs_strongsdef_container_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        
   		android:paddingBottom="@dimen/activity_vertical_margin"
        android:clipToPadding="false"
         />   
    
</FrameLayout>
