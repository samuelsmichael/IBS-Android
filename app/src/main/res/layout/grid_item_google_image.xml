<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ibs_grid_thumbnail_height"
    android:layout_height="@dimen/ibs_grid_thumbnail_height"
    android:minHeight="@dimen/ibs_grid_height"
    android:orientation="vertical" 
    android:gravity="center"
    android:layout_margin="@dimen/min_item_margin"
    
    >

    
    <ImageView
        android:id="@+id/grid_item_google_img"
        android:layout_width="wrap_content"
    	android:layout_height="@dimen/ibs_grid_thumbnail_height"
    	android:maxWidth="@dimen/ibs_grid_thumbnail_width"
        android:maxHeight="@dimen/ibs_grid_thumbnail_height"
        android:src="@null" 
        android:scaleType="fitCenter"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/grid_item_google_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />


</FrameLayout>
