<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    
    android:paddingBottom="5dp"
    >
    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
			        >
			        
	    <ProgressBar
		             android:id="@+id/ibs_progress_bar_loading"
		             style="TextLoadingProgressBar"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_gravity="center" />
	    <LinearLayout
	        android:id="@+id/ibs_dialog_container"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    
	    android:orientation="vertical"
	    android:gravity="center"
	    >
			<TextView
			    android:id="@+id/ibs_dialog_text_title"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          
		          android:text=""
		          style="@style/TitleText.Large.Light" />
		
			<TextView
			    android:id="@+id/ibs_dialog_text_content"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            
		            android:text=""
		            style="@style/DescriptiveText.Light" />
			
			
		        <Button
		            android:id="@+id/ibs_dialog_button_confirm"
		            android:layout_width="match_parent"
		            android:layout_height="@dimen/ibs_button_height"
		            
		            android:text="@string/ibs_button_confirm"
		            android:textAppearance="?android:attr/textAppearanceMedium"
		            android:textColor="@color/textColorPrimary" />
		
		</LinearLayout>
	</FrameLayout>
</ScrollView>