<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:windowBackground="@null"
    android:background="@null"  
    >

    <ImageView
        android:id="@+id/dialog_tooltip_arrowUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:src="@drawable/dialog_tooltip_arrow_up" />
    
     <FrameLayout 
		         android:layout_width="250dp"
			     android:layout_height="wrap_content"
			     
	        android:background="@drawable/popup_background"
			        >
		
	         <ProgressBar
	             android:id="@+id/ibs_progress_bar_loading"
	             style="TextLoadingProgressBar"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_gravity="center"
	             
	             
	              />
	
	    <LinearLayout
       android:id="@+id/dialog_emailForgot_container"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       
	        android:background="@drawable/popup_background"
       android:orientation="vertical" >
 <TextView
        android:id="@+id/dialog_emailForgot_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            
            android:text=""
            style="@style/DescriptiveText.Light" />

     <EditText
        android:id="@+id/dialog_emailForgot_email"
        style="@style/WhiteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/ibs_hint_email"
        android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/dialog_emailForgot_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ibs_button_height"
            
            android:text="@string/ibs_button_restore"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textColorPrimary" />
</LinearLayout>
    </FrameLayout>
    
    
    <ImageView
        android:id="@+id/dialog_tooltip_arrowDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:src="@drawable/dialog_tooltip_arrow_down" />

</LinearLayout>